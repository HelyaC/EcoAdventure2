{% extends 'base.html.twig' %}

{% block title %}S'instruire{% endblock %}

{% block body %}
<div class="relative w-full bg-[#F9F2E1] py-10 flex justify-center items-center">
    <img class="w-full max-w-screen-lg h-auto object-cover rounded-md" src="/images/imagetrain.jpg" alt="Random image">

    <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4">
        <h1 class="text-white text-4xl md:text-5xl lg:text-6xl font-bold">S'instruire pour un avenir durable</h1>
        <p class="text-white text-lg md:text-2xl lg:text-3xl mt-2">Renseignez-vous sur les bonnes pratiques !</p>
    </div>
</div>

<section class="relative bg-transparent p-4 flex justify-center">
    <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 w-full max-w-7xl">

        {# Boucle sur chaque cours pour cr√©er une carte #}
        {% for cour in cours %}
            <div class="bg-[#a4b07d] border border-gray-200 rounded-lg shadow-lg text-sm flex flex-col items-center p-4 transform hover:scale-105 transition duration-300">
                <div class="p-5 text-center">
                    <a href="/">
                        <img class="h-30 mx-auto mb-4 rounded-lg" src="{{ asset('uploads/images/' ~ cour.imageUrl) }}" alt="{{ cour.title }}">
                    </a>
                    <h5 class="mb-2 text-xl md:text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ cour.title }}</h5>
                    <p class="text-gray-700 dark:text-gray-400">{{ cour.content|length > 100 ? cour.content|slice(0, 100) ~ '...' : cour.content|raw }}</p>
                </div>
            </div>
        {% else %}
            <p>Aucun cours n'est disponible pour le moment.</p>
        {% endfor %}

    </div>
</section>
{% endblock %}