{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-wrap justify-center space-x-4  w-full">

        <div class="w-[484px] h-[137px] left-[173px] top-[165px] absolute justify-start items-center gap-4 inline-flex">
    <img class="w-[83.10px] h-20" src="{{ asset('images/logo.png') }}" />
    <div class="w-[385px] h-[57px] text-black text-5xl font-black font-['Inter'] tracking-widest">EcoAdventure</div>
  </div>
        <div>
        <form method="post" class="form-container space-y-8 w-full">
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}

            <div class="mb-4">
                {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class': ' p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom', 'class': ' p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse e-mail', 'class': ' p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.password, {'attr': {'placeholder': 'Mot de passe', 'class': ' p-3 border border-gray-300 rounded-lg'}}) }}
            </div>

            <div class="mb-4">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox'}}) }}
            </div>

            <div class="mt-6">
                <button type="submit" class=" bg-[#a4b07d] text-white font-semibold py-3 px-6 rounded-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105">S'inscrire</button>
            </div>

            <p class="text-xs lg:text-sm flex items-center justify-center gap-1 mt-4">
                <strong>Déjà inscrit ?</strong>
                <a href="#" class="text-blue-500 hover:underline">Connectez-vous</a>
            </p>

            {{ form_end(registrationForm) }}
        </form>
        </div>
    </div>
{% endblock %}
