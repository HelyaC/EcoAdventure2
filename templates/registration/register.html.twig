{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-col items-center w-full p-6 space-y-8">

        <!-- Logo et titre centralisés et ajustés pour toutes tailles d’écran -->
        <div class="flex flex-col items-center space-y-4 text-center w-full">
            <img class="w-20 h-20 md:w-24 md:h-24" src="{{ asset('images/logo.png') }}" alt="EcoAdventure logo"/>
            <h1 class="text-4xl md:text-5xl font-black tracking-widest text-gray-800">EcoAdventure</h1>
        </div>

        <!-- Formulaire de contact avec largeur maximale et ajustements responsifs -->
        <form method="post" class="w-full max-w-md p-4 bg-white rounded-lg shadow-md space-y-6">
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}

            <div class="mb-4">
                {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class': 'w-full p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom', 'class': 'w-full p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse e-mail', 'class': 'w-full p-3 border border-gray-300 rounded-lg'}}) }}
            </div>
            <div class="mb-4">
                {{ form_widget(registrationForm.password, {'attr': {'placeholder': 'Mot de passe', 'class': 'w-full p-3 border border-gray-300 rounded-lg'}}) }}
            </div>

            <div class="flex items-center space-x-2 mb-4">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox'}}) }}
                <span class="text-sm">J'accepte les conditions d'utilisation</span>
            </div>

            <div class="mt-6 text-center">
                <button type="submit" class="py-3 px-6 w-80 sm:w-auto text-sm font-medium text-white bg-[#a4b07d] rounded-lg hover:bg-[#8e9d6a] transition focus:ring-4 focus:outline-none focus:ring-[#a4b07d] dark:bg-[#8e9d6a] dark:hover:bg-[#7d895f]">S'inscrire</button>
            </div>

            <p class="text-center text-xs lg:text-sm flex items-center justify-center gap-1 mt-4">
                <strong>Déjà inscrit ?</strong>
                <a href="#" class="text-blue-500 hover:underline">Connectez-vous</a>
            </p>

            {{ form_end(registrationForm) }}
        </form>
    </div>
{% endblock %}
